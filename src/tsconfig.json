    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "target": "es6",
    "preserveConstEnums": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es6",
      "es2017"
    ],
    "types": [
      "node",
      "mocha",
      "rx"
    ]
  }
}
